= form_with(model: @profile, url: profile_path, method: 'PUT', local: true) do |f|
  %div
    = f.label :avatar, 'アバター'
  %div
    = f.file_field :avatar
  %div
    = f.label :nickname, 'ニックネーム'
  %div
    = f.text_field :nickname
  %div
    = f.label :introduction, '自己紹介'
  %div
    = f.text_area :introduction
  %div
    = f.submit '更新'