.container.profilePage 
  .profilePage_user 
    .prfilePage_user_name
      = user.username
    .profilePage_follow_button
      = link_to 'Follow', account_follows_path(user), data: { method: 'post' }
    .profilePage_user_image
      = image_tag user.avatar_image
    .profile_user_actioinBtn
    .profile_user_actionInfo
      .user_posts
        .posts_counts
          = link_to article_path(@article) do
            %span= user.articles_count
            %p Posts
      .user_follow-follower_button
        - if user == current_user
          .user_followers
            .followers_counts
              %span 124
              %p Followers
          .user_Following
            .followings_counts
              %span 321
              %p Following
      .user_likes
        .likes_counts
          = link_to favorites_path do
            %span= user.likes_count
            %p Likes
    .profilePage_user_basicInfo
      .profilePage_user_nickname 
        = user.display_name
      .profilePage_user_introduction
        = user.display_introduction
    .profilePage_user_actionBtn
      = link_to '編集', edit_profile_path


  
  - user.articles.each do |article|
    = link_to article_path(article) do
      .card_image
        - if article.images.attached?
          = image_tag article.images.first
        - else
          = image_tag 'eyecatch1.png'    
    